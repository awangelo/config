{
    "editor.fontFamily": "JetBrainsMono Nerd Font",
    "editor.fontWeight": "450",
    "editor.formatOnSave": true,
    "editor.lineHeight": 1.4,
    "editor.renderLineHighlight": "gutter",
    "editor.semanticHighlighting.enabled": false,
    "editor.minimap.enabled": false,
    "editor.scrollbar.horizontal": "hidden",
    "editor.inlineSuggest.suppressSuggestions": true,
    "editor.cursorSmoothCaretAnimation": "explicit",
    "editor.fontLigatures": true,
    "editor.cursorStyle": "block",
    "editor.unicodeHighlight.nonBasicASCII": false,
    "editor.mouseWheelZoom": true,

    "workbench.startupEditor": "none",
    "workbench.editor.labelFormat": "default",
    "workbench.activityBar.location": "hidden",
    "workbench.statusBar.visible": false,
    "workbench.layoutControl.enabled": false,
    "workbench.editor.enablePreview": false,
    "workbench.editor.tabActionCloseVisibility": false,
    "workbench.tips.enabled": false,
    "workbench.iconTheme": "material-icon-theme",
    "workbench.colorTheme": "Catppuccin Mocha",

    "explorer.compactFolders": false,
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,

    "window.commandCenter": false,
    "window.titleBarStyle": "custom",
    "window.title": "≽^•⩊•^≼",
    "window.menuBarVisibility": "compact",
    "window.customTitleBarVisibility": "auto",

    "terminal.integrated.defaultProfile.linux": "zsh",
    "terminal.integrated.profiles.linux": {
        "zsh": {
            "path": "/bin/zsh"
        }
    },
    "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font",

    "C_Cpp.default.compilerPath": "/usr/bin/gcc",
    "C_Cpp.clang_format_fallbackStyle": "{ BasedOnStyle: GNU, IndentWidth: 4, TabWidth: 4, ColumnLimit: 0, BreakBeforeBraces: Custom, SpaceBeforeParens: ControlStatements, AlignConsecutiveMacros: true, AlignConsecutiveDeclarations: false, AlignConsecutiveAssignments: true, AlignArrayOfStructures: Right, BraceWrapping: { AfterFunction: true, AfterControlStatement: false, AfterClass: false, AfterEnum: false, AfterNamespace: false, BeforeCatch: false, BeforeElse: false, IndentBraces: false } }",
    "c-cpp-compile-run.output-location": "",

    "go.toolsManagement.autoUpdate": true,
    "files.associations": {
        "*.gohtml": "html",
        "*.tmpl": "html"
    },
    "gopls": {
        "ui.codelenses": {
            "gc_details": true
        }
    },

    "security.workspace.trust.untrustedFiles": "open",

    "liveServer.settings.donotShowInfoMsg": true,

    "update.mode": "manual",

    "github.copilot.enable": {
        "*": true,
        "plaintext": false,
        "markdown": true,
        "scminput": false
    },

    "vscord.status.idle.resetElapsedTime": true,
    "vscord.status.details.text.idle": "",
    "vscord.status.details.text.notInFile": "",
    "vscord.status.idle.check": false,

    "apc.header": {
        "height": 36
    },
    "apc.listRow": {
        "height": 23
    },
    "apc.stylesheet": {
        ".title-label > h2": "display: none",
        ".editor-actions": "display: none !important;",
        ".split-view-view:first-child .pane-header": "display: none !important;",
        ".monaco-tl-twistie": "display: none",
        ".editor .title": "background: transparent !important",
        ".editor .scrollbar .slider": "visibility: hidden",
        ".editor .scrollbar:hover .slider": "visibility: initial"
    },
    "haskell.manageHLS": "GHCup"
}